<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.stiantornholmgrimsgaard.mappe2_s305537.SMS.SendSMSActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.04"
        android:background="@drawable/main_background_selector"
        android:padding="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="51dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLayoutBackground">

            <EditText
                android:id="@+id/sms_date_view_edit_text"
                android:layout_width="326dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/border"
                android:editable="false"
                android:elevation="2dp"
                android:ems="10"
                android:inputType="date"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/sms_content_view_edit_text"
                android:layout_width="326dp"
                android:layout_height="468dp"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="17dp"
                android:layout_weight="0.04"
                android:background="@drawable/border"
                android:editable="false"
                android:elevation="2dp"
                android:ems="10"
                android:gravity="start|end"
                android:hint="@string/sms_content"
                android:inputType="textMultiLine"
                android:lineSpacingExtra="10dp"
                android:padding="30dp"
                android:textSize="20sp"
                app:layout_constraintHorizontal_bias="0.482"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sms_date_view_edit_text" />

        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

    <include
        layout="@layout/bottom_navigation_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</LinearLayout>