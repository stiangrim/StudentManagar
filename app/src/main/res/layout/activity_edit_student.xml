<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.stiantornholmgrimsgaard.mappe2_s305537.Party.EditStudentActivity">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.04"
        android:background="@drawable/main_background_selector"
        android:padding="20dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="51dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorLayoutBackground"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="20dp">

            <EditText
                android:id="@+id/edit_first_name_edit_text"
                android:layout_width="325dp"
                android:layout_height="90dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:layout_weight="0.04"
                android:background="@drawable/border"
                android:elevation="2dp"
                android:ems="10"
                android:hint="First Name"
                android:inputType="textPersonName"
                android:padding="30dp"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/edit_last_name_edit_text"
                android:layout_width="325dp"
                android:layout_height="90dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="26dp"
                android:layout_weight="0.05"
                android:background="@drawable/border"
                android:elevation="2dp"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="textPersonName"
                android:padding="30dp"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_first_name_edit_text" />

            <EditText
                android:id="@+id/edit_phone_number_edit_text"
                android:layout_width="325dp"
                android:layout_height="90dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="26dp"
                android:background="@drawable/border"
                android:elevation="2dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:padding="30dp"
                android:textSize="25sp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_last_name_edit_text" />

            <Button
                android:id="@+id/update_student_button"
                android:layout_width="325dp"
                android:layout_height="90dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorSuccess"
                android:onClick="updateStudent"
                android:text="Update"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edit_phone_number_edit_text" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="325dp"
                android:layout_height="90dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorDanger"
                android:onClick="deleteStudent"
                android:text="Delete"
                android:textColor="@color/colorWhite"
                android:textSize="30sp"
                app:layout_constraintHorizontal_bias="0.493"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/update_student_button" />

        </android.support.constraint.ConstraintLayout>

    </FrameLayout>

    <include
        layout="@layout/bottom_navigation_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</LinearLayout>